<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/profile_result"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/yh" />

        <TextView
            android:id="@+id/usernameinfo_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/profile_result"
            android:layout_toRightOf="@id/profile_result"
            android:textColor="@color/black"
            android:textSize="27dp"
            android:text="amos 님"/>

        <TextView
            android:id="@+id/fkemail_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usernameinfo_result"
            android:layout_alignLeft="@id/usernameinfo_result"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-4dp"
            android:text="email: amos@gmail.com"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fkemail_result"
            android:layout_alignLeft="@id/fkemail_result"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-4dp"
            android:text="phone : 010-1234-5678"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/barr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:gravity="center">

        <View

            android:layout_width="330dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#e2e2e2" />
    </RelativeLayout>

    <TextView
        android:id="@+id/history"
        android:layout_below="@+id/barr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="최근 접수기록"
        android:textSize="30dp"
        android:textColor="@color/white"/>


    <ImageView
        android:id="@+id/userr"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="181dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/SinGoJa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history"
        android:padding="20dp"
        android:text="                amos"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/datep"
        android:layout_below="@+id/date"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/clock"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SinGoJa"
        android:padding="20dp"
        android:text="                 2022년 3월 2일"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/gpsp"
        android:layout_below="@+id/date"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/gps"/>

    <TextView
        android:id="@+id/gpss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="                서울특별시 강남구 영동대로 220"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/resultp"
        android:layout_below="@+id/gpss"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/resulttt" />

    <TextView
        android:id="@+id/resss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gpss"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="               주차금지구역"
        android:textSize="15dp" />

    <ImageView
        android:layout_below="@+id/resss"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/caricon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resss"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="               28라 5584"
        android:textSize="15dp" />

</RelativeLayout>